
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1"
         metadata-complete="false">



  <!-- UserServlet (Registration & Login) -->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.etrade.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/UserServlet</url-pattern>
  </servlet-mapping>

  <!-- ItemServlet (Post, List, Edit, Delete Items) -->
  <servlet>
    <servlet-name>ItemServlet</servlet-name>
    <servlet-class>com.etrade.servlet.ItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemServlet</servlet-name>
    <url-pattern>/ItemServlet</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.etrade.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ChatServlet</servlet-name>
    <servlet-class>com.etrade.servlet.ChatServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ChatServlet</servlet-name>
    <url-pattern>/ChatServlet</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.etrade.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


</web-app>
